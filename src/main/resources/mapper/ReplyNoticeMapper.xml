<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.seecoder.courselearning.mapperservice.post.ReplyNoticeMapper">
    <resultMap id="BaseResultMap" type="cn.seecoder.courselearning.po.post.ReplyNotice">
        <id column="id" jdbcType="INTEGER" property="id" />
        <result column="user_id" jdbcType="INTEGER" property="userId" />
        <result column="reply_id" jdbcType="INTEGER" property="replyId" />
    </resultMap>

    <delete id="deleteByPrimaryKey" parameterType="java.lang.Integer">
        delete from reply_notice
        where id = #{id,jdbcType=INTEGER}
    </delete>
    <insert id="insert" parameterType="cn.seecoder.courselearning.po.post.ReplyNotice" useGeneratedKeys="true" keyProperty="id">
        insert into reply_notice (id, user_id, reply_id)
        values (#{id,jdbcType=INTEGER}, #{userId,jdbcType=INTEGER},#{replyId,jdbcType=INTEGER})
    </insert>

    <select id="selectByUserId" parameterType="java.lang.Integer" resultMap="BaseResultMap">
        select id, user_id, reply_id
        from reply_notice
        where user_id = #{userId}
    </select>

</mapper>